<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_ALVEARIUM_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="state"
			type="status"
			label="COM_ALVEARIUM_FILTER_PUBLISHED"
			description="COM_ALVEARIUM_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="category_id"
			type="category"
			label="JOPTION_FILTER_CATEGORY"
			extension="com_alvearium"
			description="JOPTION_FILTER_CATEGORY_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_ALVEARIUM_LIST_FULL_ORDERING"
			description="COM_ALVEARIUM_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="hives.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="hives.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="hives.state ASC">JSTATUS_ASC</option>
			<option value="hives.state DESC">JSTATUS_DESC</option>
			<option value="hives.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="hives.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="category_title ASC">JCATEGORY_ASC</option>
			<option value="category_title DESC">JCATEGORY_DESC</option>
			<option value="hives.created ASC">JDATE_ASC</option>
			<option value="hives.created DESC">JDATE_DESC</option>
			<option value="hives.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="hives.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="hives.hits ASC">JGLOBAL_HITS_ASC</option>
			<option value="hives.hits DESC">JGLOBAL_HITS_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_ALVEARIUM_LIST_LIMIT"
			description="COM_ALVEARIUM_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
